.evalute{
    background-color: #f7f7f7;
}
.head{
    display: flex;
    align-items: center;
    height: 120rpx;
    background-color: #ffffff;
    margin-top: 16rpx;
}
.head .h_txt{
    color:#333333;
    font-size: 28rpx;
    padding-left: 28rpx;
}

.h_level{
    display: flex;
    align-items: center;
}
.h_level .himg{
    width: 60rpx;
    height: 60rpx;
    margin-left: 38rpx;
}
.content{
    display: flex;
    flex-wrap: wrap;
    background-color: #ffffff;
}
.content .clist{
    width: 90%;
    margin: 0 auto;
    border-top: 1rpx solid rgba(180,180,180,0.2);
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}
.clist .c_label{
    padding: 16rpx 20rpx;
    background-color: #E9E9E9;
    display: inline-block;
    margin-right: 28rpx;
    margin-top: 28rpx;
    border-radius: 20rpx;
}
.check{
    background-color: #666666 !important;
    color: #ffffff;
}
.context{
    width: 90%;
    margin: 0 auto;
    border: 1rpx solid rgba(180,180,180,0.3);
    margin-bottom: 30rpx;
}
.img{
    background-color: #ffffff;
    width: 90%;
    height: 400rpx;
    margin: 0 auto;
}
.img image{
    width: 38rpx;
    height: 32rpx;
}
.imgList{
    width: 100%;
    height: 320rpx;
    margin-top: 10rpx;
    display: flex;
}
.imgList .imgLi{
    width: 30%;
    height: 140rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
    position: relative;
}
.imgLi .img{
    width: 100%;
    height: 140rpx;
}
.imgLi .delete{
    position:absolute;
    top:-6rpx;
    right:0;
    width:44rpx;
    height:44rpx;
}
.foot{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #ffffff;
    background-color: #E94816;
    position: absolute;
    bottom: 0;
    left: 0;
}
