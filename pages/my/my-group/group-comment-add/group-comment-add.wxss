@import "../../../../tpls/my-group-item/group-item-tpl.wxss";

page {
  background-color: #fff;
}

.banner {
  background-color: #f7f7f7;
  padding-top: 20rpx;
}

.head {
  height: 120rpx;
  margin-bottom: 40rpx;
}

/* radio-group */

.radio-item {
  position: relative;
  display: inline-block;
  width: 76rpx;
  height: 76rpx;
  margin-left: 30rpx;
}

.radio-item image {
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #fff;
}

/* key-words */
.key-words .checkbox-label {
   display: inline-block; 
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.key-words .w-label {
  display: inline-block;
  background-color: #f7f7f7;
  border-color: #e9e9e9;
  color: #666;
  font-size: 26rpx;
}

.key-words .selected {
  color: #fff;
  background-color: #666;
}

.textarea {
  padding-bottom: 30rpx;
}

/* upload-image-group */

.icon-camera {
  width: 38rpx;
  height: 32rpx;
}

.img-box {
  display: inline-block;
  position: relative;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
}

.img-box image {
  width: 180rpx;
  height: 180rpx;
}

.img-box .btn-delete {
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: #333;
  border-radius: 50%;
}

.img-input-box {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #d9d9d9;
}
