.card{
  margin:78rpx 40rpx;
  background-color: #fff;
  box-shadow: 0px 1px 9px 0px rgba(0,0,0,.1);
  padding:0 56rpx;
}

.header{
  line-height:88rpx;
  font-size:32rpx;
  border-bottom:1px solid #F7F7F7;
  text-align: center;
}

.footer{
  display: flex;
  height:108rpx;
  border-top:1px solid #F7F7F7;
}
.weixin-pay{
  flex:1;
}
.icon-pay{
  width:50rpx;
  height:50rpx;
  margin-right:20rpx;
}
.icon-payfor{
  flex: 0 0 40rpx;
  width:40rpx;
  height:40rpx;
}
.con{
  padding:40rpx;
}
.item{
  line-height: 58rpx;
}
.label{
  color:#999;
}
.btn-con{
  padding:0 74rpx;
}
.btn-con button{
  padding:0 38rpx;
  font-size:30rpx;
}
.btn-know{
  background-color: #fff;
  color:#999;
}
.btn-member{
  background-color: rgba(233,72,22,.1);
  color:#E94816;
  border-color:#E94816;
  margin:0;
}