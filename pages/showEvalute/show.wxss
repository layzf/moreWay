.show{
    background-color: #f7f7f7;
}
.head{
    background-color: #ffffff;
}
.head .h-con{
    display: flex;
    justify-content: space-between;
    width: 90%;
    margin: 20rpx auto 0 auto;
    padding-top: 26rpx;
    padding-bottom: 26rpx;
    border-bottom: 1rpx solid rgba(180,180,180,0.2);
}
.h-left{
    display: flex;
    flex-direction: column;
    flex: 1;
}
.h-left .title{
    color: #333333;
    font-size: 28rpx;
}
.h-left .time{
    color:#999999;
    font-size: 24rpx;
    padding-top: 16rpx;
}
.h-right{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.h-right image{
    width: 76rpx;
    height: 76rpx;
    margin-right: 20rpx;
}
.h-right text{
    color: #FF5D22;
    font-size: 28rpx;
}
.content{
    background-color: #ffffff;
}
.content .title{
    color: #666666;
    padding: 20rpx 0;
    width: 90%;
    margin: 0 auto;
}
.imgList{
    width: 90%;
    display: flex;
    margin: 10rpx auto 0 auto;
    padding-bottom: 20rpx;
}
.imgList .imgLi{
    width: 30%;
    height: 140rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
    position: relative;
}
.imgLi .img{
    width: 100%;
    height: 140rpx;
}
.clist{
    width: 100%;
    border-top: 1rpx solid rgba(180,180,180,0.2);
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    background-color: #ffffff;
    border-bottom: 1rpx solid rgba(180,180,180,0.2);
}
.clist .c_label{
    padding: 16rpx 20rpx;
    background-color: #E9E9E9;
    display: inline-block;
    margin-left: 28rpx;
    margin-top: 28rpx;
    border-radius: 20rpx;
}
.check{
    background-color: #666666 !important;
    color: #ffffff;
}
