@import "/style/form-input.wxss";
page{
  background-color: #ffffff;
  height: 100%;
  font-size: 14px;
  padding-bottom:64rpx;
}
.container{
  width:100%;
  height: 100%;
}
.placeStyle{
  font-size: 12px;
}
.section{
  width: 30%;
}
.section text{
  width: 51%;
  line-height: 45px;
}
.section view{
  width: 55%;
  height: 40px;
  color: #DBDBDB;
  border-bottom: 1px solid #F2F0F2;
}
.section view input{
  width: 100%;
  color: #DBDBDB;
  padding-top: 10px;
  text-align: center;
}
.section:nth-child(1) text{
  width:40%; 
}
.section:nth-child(1) view{
  width:60%; 
}
.section:nth-child(3) text{
  width:40%; 
}
.section:nth-child(3) view{
  width:60%; 
}
.placeStyle{
  width: 100%;
}
.btn-submit{
  margin:60rpx 28rpx 40rpx;
}
.tips{
  padding:0 28rpx;
  color:#999;
  font-size: 24rpx;
  margin-bottom:28rpx;
}
.form-group-large .label{
  width: 25%;
  flex:none;
  margin-right: 0px;
  color: #333333;
  text-indent: 1em;
}
.sections{
  margin-left: 13px;
}
.sections text{
  width: 20%;
  line-height: 45px;
}
.sections input{
  width: 90%;
  height: 45px;
}