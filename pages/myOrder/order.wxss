page {
    height: 100%;
    color: #999;
    background-color: #f7f7f7;
}
.check{
    flex: 1;
    text-align: center;
    border-bottom: 4rpx solid #E94816;
    color: #E94816;
}
.order .head{
    display: flex;
    justify-content: space-around;
    background-color: #FFFFFF;
    color: #666666;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid rgba(180,180,180,0.3);
}
.order .head .head_item{
    flex: 1;
    text-align: center;
}

.order .content .c_content .c_head{
    display: flex;
    align-items: center;
    font-size: 28rpx;
    background-color: #FFFFFF;
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 20rpx;
}

.order .content .c_content .c_head .c_h_time{
    color: #999999;
    flex: 1;
    text-align: left;
    padding-left: 30rpx;
}

.order .content .c_content .c_head .c_h_text{
    color: #FF5D22;
    flex: 1;
    text-align: right;
    padding-right: 30rpx;
}

.order .content .c_content .c_list{
    display: flex;
    flex-direction: column;
}
.c_item{
    display: flex;
    height: 240rpx;
    border-bottom: 1px solid rgba(180,180,180,0.3);
}
.c_item .item_img{
    width: 190rpx;
    height: 190rpx;
    border: 1px solid rgba(180,180,180,0.3);
    margin-left: 5%;
    margin-top: 25rpx;
}
.c_item .item_desc{
    display: flex;
    flex-direction: column;
    margin-top: 25rpx;
    padding-left: 25rpx;
    width: 60%;
    position: relative;
}

.c_item .item_desc .item_desc_title{
    font-size: 30rpx;
    font-weight: 600;
    color: #333333;
}

.c_item .item_desc .item_desc_mark{
    height: 80rpx;
    font-size: 28rpx;
    padding-top: 10rpx;
    color: #999999;
    padding-bottom: 10rpx;
}

.c_item .item_desc .item_desc_price{
    color: #000000;
    font-size: 28rpx;
    position: absolute;
    bottom: 25rpx;
    left: 25rpx;
}

.c_item .item_desc image{
    width: 18rpx;
    height: 22rpx;
}

.all{
    background-color: #FFFFFF;
    height: 90rpx;
    line-height: 90rpx;
    text-align: right;
    padding-right: 40rpx;
    border-bottom: 1px solid rgba(180,180,180,0.2);
    font-size: 26rpx;
}
.c_foot{
    height: 100rpx;
    display: flex;
    font-size: 26rpx;
    background-color: #FFFFFF;
    justify-content: flex-end;
    align-items: center;
}

.c_foot .cancel{
    color: #666666;
    border: 1px solid rgba(180,180,180,0.3);
    border-radius: 26rpx;
    width: 140rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    margin-right: 20rpx;
}

.c_foot .confirm{
    color: #E94816;
    border: 1px solid #E94816;
    border-radius: 26rpx;
    width: 140rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    margin-right: 20rpx;
}
