/* pages/y-assess/y-assess.wxss */
page{
  background: #FFF;
  padding-bottom: 120rpx;
}
.star{
  margin-top: 35rpx;
}
.star image{
  width: 52rpx;
  height: 50rpx;
  margin-right: 14rpx;
}
.star text{
  font-size: 28rpx;
}
.margins{
  padding: 0 28rpx;
  border-top: 10rpx solid #F7F7F7;
}
.serve{
  margin: 0 20rpx;
  border-top: 1px solid #F7F7F7;
  margin-top: 36rpx;
  padding-top: 40rpx;
}
.serveFlex{
  display: flex;
  align-items: center;
}
.serve .tabs{
  font-size: 28rpx;
  padding: 16rpx 20rpx;
  background: #E9E9E9;
  color: #666666;
  border-radius: 16rpx;
  margin-right: 30rpx;
}
.serve .active{
  color: #FFF;
  background: #666666;
}
.serve textarea{
  width: 100%;
  height: 180rpx;
  margin-top: 40rpx;
}
.putBtn{
  background: #E94816;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FFF;
  position: fixed;
  width: 100%;
  bottom: 0;
}
.lookImgs{
  margin-top: 40rpx;
  display: flex;
  flex-wrap: wrap;

  position: relative;
  width: 100%;

}
.lookImgs>view{
  width: 100%;
  height: 100%; /* 铺满父元素容器，这时候宽高就始终相等了 */
}
.lookImgs image{
  margin: 0;
  flex-grow: 1;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 2%;

}