
.order{
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 99999;
}
.order-box{
  padding-top: 1px;
  background: #F8F8F8;
  z-index: 999;
  position: relative;
}
.up{
  animation: up .6s;
}
.down{
  animation: downs .6s;
}
@keyframes up
{
  0% { transform: translateY(1000rpx); }
  100% { transform: translateY(0rpx); }
}
@keyframes downs
{
  0% { transform: translateY(0); }
  100% { transform: translateY(1000rpx); }
}

.showModel{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5)
}

