/* components/getUserInfo/index.wxss */

.makeUserInfoModel{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999999;
}
.makeUserInfoModel .shaw{
  background: rgba(0,0,0,0.6);
  width: 100%;
  height: 100%;
}
.makeUserInfoModel .userInfoBox{
  position: fixed;
  top: 40%;
  background: #FFF;
  width: 90vw; 
  left: 50%;
  margin-left:-45vw;
  padding: 40rpx 0;
  text-align: center;
  border-radius: 10rpx;
}
.makeUserInfoModel .userInfoBox .titles{
  color: #000;
  font-size: 32rpx;
  border-bottom: 1px solid #ccc;
  padding-bottom: 30rpx;
}
.makeUserInfoModel .userInfoBox button{
  background: #ff5d22 !important;
  font-size: 30rpx;
  padding: 20rpx 0;
  line-height: normal;
  color: #FFF;
  width: 70vw;
  margin: 0 auto;
  margin-top: 30rpx;
}

.makeUserInfoModel .userInfoBox .unactive{
  background: #ccc !important;
}

.checkboxClass{
  margin-top: 40rpx;
  font-size: 22rpx;
   display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
}
.checkboxClass text{
  text-decoration: underline;
  color: #ff5d22;
}
